{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post</h1>

    <table class="table table-responsive table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post') }}" class="btn btn-default">Back to the list</a>

    <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-default">Edit</a>

{% endblock %}
