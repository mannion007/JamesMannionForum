{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="table table-responsive records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.body }}</td>
                <td>
                    <a href="{{ path('post_show', { 'id': entity.id }) }}" class="btn btn-sm btn-default">show</a>
                    <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}" class="btn btn-primary">Create a new entry</a>

    {% endblock %}
