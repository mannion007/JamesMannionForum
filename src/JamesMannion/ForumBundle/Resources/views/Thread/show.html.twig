{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Thread</h1>

    <table class="table table-responsive record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('thread') }}" class="btn btn-default">Back to the list</a>

    <a href="{{ path('thread_edit', { 'id': entity.id }) }}" class="btn btn-default">Edit</a>

    {{ form(delete_form) }}

{% endblock %}
