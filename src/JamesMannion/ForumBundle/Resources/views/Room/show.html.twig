{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Room</h1>

    <table class="table table-responsive record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room') }}" class="btn btn-default">Back to the list</a>

    <a href="{{ path('room_edit', { 'id': entity.id }) }}" class="btn btn-default">Edit</a>

    {{ form(delete_form) }}
{% endblock %}
